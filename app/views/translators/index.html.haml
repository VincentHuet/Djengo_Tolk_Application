%h1 Listing translators
%table
  %tr
    %td
      %strong ID
    %td
      %strong Name
    %td 
      %strong Locale
    %td 
      %strong Email
    %th
    %th
    %th
  - @translators.each do |translator|
    %tr
      %td= translator.id
      %td= translator.name
      %td= Locale.find(translator.locale_id).name + " - " + translator.locale_id.to_s
      %td= translator.email
      %td= raw("&nbsp;")
      %td= link_to 'Show', translator
      %td= link_to 'Edit', edit_translator_path(translator)
      %td= link_to 'Destroy', translator, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Translator', new_translator_registration_path
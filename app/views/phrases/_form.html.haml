= form_for(@phrase) do |f|
  - if @phrase.errors.any?
    #error_explanation
      %h2
        = pluralize(@phrase.errors.count, "error")
        prohibited this phrase from being saved:
      %ul
        - @phrase.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :key
    %br/
    = f.text_field :key
  .actions
    = f.submit
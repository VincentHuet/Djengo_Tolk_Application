= form_for(@translation) do |f|
  - if @translation.errors.any?
    #error_explanation
      %h2
        = pluralize(@translation.errors.count, "error")
        prohibited this translation from being saved:
      %ul
        - @translation.errors.full_messages.each do |msg|
          %li= msg


  = @corresponding_phrase.key
  .field
    = f.label :Primary_updated
    = f.check_box :Primary_updated
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :previous_text 
    = f.text_field :previous_text
  .field
    = f.label t('.phrase_id')
    = f.number_field :phrase_id
  .field
    = f.label :phrase
    = f.text_field :phrase
  .field
    = f.label :locale_id
    = f.number_field :locale_id
  .field
    = f.label :locale
    = f.text_field :locale
  .actions
    = f.submit
.page-header
  %h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email
    .controls
      = f.email_field :email
  .control-group
    = f.label :name
    .controls
      = f.text_field :name
  .control-group
    = f.label :locale_id
    .controls
      = f.select(:locale_id, locale_list(@locales), { :include_blank => false })
  .control-group
    = f.label :password
    .controls
      = f.password_field :password
  .control-group
    = f.label :password_confirmation
    .controls
      = f.password_field :password_confirmation
  .form-actions
    = f.submit "Sign up", :class => 'btn'
= render "devise/shared/links"
